<!-- layout_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/publicacion"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/imageButtonProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nataliaquintana"
        android:contentDescription="Left Button" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/NombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natalia Quintana"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bailara en la plaza del pueblo! \n(123 Assistentes)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hace 12 horas"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonRight"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        android:background="@color/transparent"
        android:contentDescription="Right Button" />

</LinearLayout>
